#!/usr/bin/env bash

rm -rf "vim/bundle"
find "vim/info" -type f ! -name .gitkeep -exec rm {} \;

chmod go-rwx -R "ssh/config" "vim/rcfiles"

for i in *; do
    if [[ "${i}" == "INSTALL" ]]; then
        continue
    fi

    rm -rf "${HOME}/.${i}"
    chmod go-rwx "${i}"
    ln -sf "${PWD}/${i}" "${HOME}/.${i}"
done

git clone https://github.com/VundleVim/Vundle.Vim ~/.vim/bundle/Vundle.vim
vim +PluginInstall +qall
