term screen-256color
altscreen on
defscrollback 50000
vbell off
startup_message off
shelltitle "> |"
password ZC9LVqUuYN1eQ  # neville
multiuser on
acladd root QCzfyCfbJo0tI  # root

# Alt-; to switch to the previous window
bindkey "^[;" prev
# Alt-' to switch to the next window
bindkey "^['" next

caption always "%{Wb}%-w%{wr}[%n]%{-}%+w"
hardstatus alwayslastline "%{R}[%n %t] %=%{G}[%Y-%m-%d %D %0c:%s] %{Y}${LOGNAME}@%H"

# Start as a login-shell
shell -$SHELL
